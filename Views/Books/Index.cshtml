@model List<KutuphaneYonetim.Models.Book>

@{
    ViewData["Title"] = "Kitaplar";
}

<h2>Kitaplar</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <input name="q"
               value="@ViewBag.Q"
               class="form-control"
               placeholder="Kitap adı veya yazar ara..." />
    </div>
    <div class="col-auto">
        <button class="btn btn-outline-primary" type="submit">Ara</button>
        <a class="btn btn-outline-secondary" asp-action="Index">Temizle</a>
    </div>
</form>


<p>
    <a class="btn btn-primary" asp-controller="Books" asp-action="Create">+ Yeni Kitap Ekle</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">Henüz hiç kitap eklenmedi.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Yazar</th>
                <th>Sayfa</th>
                <th>Tarih</th>
                <th style="width:220px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.Title</td>
                <td>@b.Author</td>
                <td>@b.PageCount</td>
                <td>@(b.PublishDate?.ToString("yyyy-MM-dd") ?? "")</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@b.Id">Düzenle</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@b.Id">Sil</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}